
<% include partials/header %>

<body id="kt_body" class="bg-body">
  <%- include('partials/message') %>

  <!--begin::Main-->
  <!--begin::Root-->
  <div class="d-flex flex-column flex-root">
    <!--begin::Authentication - Sign-up -->
    <div
      class="d-flex flex-column flex-column-fluid bgi-position-y-bottom position-x-center bgi-no-repeat bgi-size-contain bgi-attachment-fixed"
      style="background-image: url(/media/illustrations/sketchy-1/14.png"
    >
      <!--begin::Content-->
      <div
        class="d-flex flex-center flex-column flex-column-fluid p-10 pb-lg-20"
      >
        <!--begin::Logo-->
        <!--end::Logo-->
        <!--begin::Wrapper-->
        <div class="w-lg-600px bg-body rounded shadow-sm p-10 p-lg-15 mx-auto">
          <!--begin::Form-->
          <form action="/createPayment" method="post" class="form w-100" novalidate="novalidate" id="kt_sign_up_form">
            <!--begin::Heading-->
            <div class="mb-10 text-center">
              <!--begin::Title-->
              <h1 class="text-dark mb-3">Realizar un Pago</h1>
              <!--end::Title-->
              <!--begin::Link-->
              <!--end::Link-->
            </div>
            <!--begin::Input group-->
            <div class="fv-row mb-5">
              <label class="form-label fw-bolder text-dark fs-6"
                >Seleccione el Banco</label
              >
              <select name="bankId" id="bankId" class="form-select form-select-solid">
                  <% if(banks){  %>
                    <% for(var i=0; i < banks.length; i++) { %>
                      <option value="<%= banks[i].id %>"><%= banks[i].name %></option>
                      <% } %>
                  <% } %>
              </select>
              
            </div>

            <div class="d-flex flex-column mb-7 fv-row">
              <!--begin::Label-->
              <label class="form-label fw-bolder text-dark fs-6">Numero de la tarjeta</label>
              <!--end::Label-->
              <!--begin::Input wrapper-->
              <div class="position-relative">
                <!--begin::Input-->
                <input type="text" class="form-control form-control-solid" placeholder="Ingrese el Numero de la Tarjeta" name="cardId" value="" />
                <!--end::Input-->
                <!--begin::Card logos-->
                <div class="position-absolute translate-middle-y top-50 end-0 me-5">
                  <img src="/media/svg/card-logos/visa.svg" alt="" class="h-25px" />
                  <img src="/media/svg/card-logos/mastercard.svg" alt="" class="h-25px" />
                  <img src="/media/svg/card-logos/american-express.svg" alt="" class="h-25px" />
                </div>
                <!--end::Card logos-->
              </div>
              <!--end::Input wrapper-->
            </div>

            <div class="fv-row mb-5">
              <label class="form-label fw-bolder text-dark fs-6"
                >Seleccione la Franquicia</label
              >
              <select name="franchise" id="franchise" class="form-select form-select-solid">
                <option value="VISA">VISA</option>
                <option value="MASTERCARD">MASTERCARD</option>
                <option value="AMERICAN EXPRESS">AMERICAN EXPRESS</option>
              </select>
              
            </div>
            <div class="fv-row mb-5">
              <label class="form-label fw-bolder text-dark fs-6"
                >Type card</label
              >
              <select name="type" id="type" class="form-select form-select-solid">
                <option value="CREDIT">CREDIT</option>
                <option value="DEBIT">DEBIT</option>
              </select>
            </div>
            <div class="fv-row mb-5">
              <label class="form-label fw-bolder text-dark fs-6"
                >A cuantas cuotas lo prefiere?</label
              >
              <select name="creditLapses" id="creditLapses" class="form-select form-select-solid">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
                <option value="11">11</option>
                <option value="12">12</option>
              </select>
            </div>

            <div class="fv-row mb-7">
              <label class="form-label fw-bolder text-dark fs-6">Cedula del due√±o</label>
              <input
                class="form-control form-control-lg form-control-solid"
                type="text"
                placeholder=""
                name="ownerId"
                autocomplete="off"
              />
            </div>
            <div class="fv-row mb-7">
              <label class="form-label fw-bolder text-dark fs-6 ">Nombre</label>
              <input
                class="form-control form-control-lg form-control-solid"
                type="text"
                placeholder=""
                name="name"
                autocomplete="off"
              />
            </div>
            <div class="fv-row mb-7">
              <label class="form-label fw-bolder text-dark fs-6 ">Descripcion</label>
              <input
                class="form-control form-control-lg form-control-solid"
                type="text"
                placeholder=""
                name="description"
                autocomplete="off"
              />
            </div>
            <div class="fv-row mb-7">
              <label class="form-label fw-bolder text-dark fs-6 ">Email</label>
              <input
                class="form-control form-control-lg form-control-solid"
                type="email"
                placeholder=""
                name="email"
                autocomplete="off"
              />
            </div>
            <div class="fv-row mb-5">
              <label class="form-label fw-bolder text-dark fs-6"
                >Ubicacion del pago</label
              >
              <select name="location" id="location" class="form-select form-select-solid">
                <option value="SINCELEJO">Sincelejo</option>
                <option value="BARRANQUILLA">Barranquilla</option>
                <option value="SANTA MARTA">Santa Marta</option>
                <option value="MONTERIA">Monteria</option>
              </select>
            </div>

            <div class="fv-row mb-7">
              <label class="form-label fw-bolder text-dark fs-6 ">Total</label>
              <input
                class="form-control form-control-lg form-control-solid"
                type="number"
                placeholder=""
                name="total"
                autocomplete="off"
              />
            </div>

            <div class="text-center">
              <button
                type="submit"
                class="btn btn-lg btn-primary"
              >
                <span class="indicator-label">Submit</span>
                <span class="indicator-progress"
                  >Please wait...
                  <span
                    class="spinner-border spinner-border-sm align-middle ms-2"
                  ></span
                ></span>
              </button>
            </div>
            <!--end::Actions-->
          </form>
          <!--end::Form-->
        </div>
        <!--end::Wrapper-->
      </div>
      <!--end::Content-->
      <!--begin::Footer-->
      <% include partials/footer %>
<!-- Footer -->

